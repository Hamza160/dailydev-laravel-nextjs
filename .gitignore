# =========================
# Global Node / JS ignores
# =========================
node_modules
.pnp
.pnp.*
npm-debug.log*
yarn-debug.log*
yarn-error.log*
.pnpm-debug.log*

# Yarn cache except important files
.yarn/*
!.yarn/patches
!.yarn/plugins
!.yarn/releases
!.yarn/versions

# =========================
# Next.js / Nest.js (frontend)
# =========================
frontend/.next
frontend/out
frontend/node_modules
frontend/.env
*.tsbuildinfo
next-env.d.ts

# =========================
# Laravel (backend)
# =========================
backend/vendor
backend/storage/*.key
backend/.env
backend/node_modules

# =========================
# Production / build
# =========================
/build

# =========================
# Coverage / testing
# =========================
coverage
*.lcov

# =========================
# Misc system files
# =========================
.DS_Store
*.pem

# =========================
# Logs
# =========================
*.log

# =========================
# Env files (root + anywhere)
# =========================
.env
.env.*
!.env.example

# =========================
# Vercel / deployment
# =========================
.vercel

# =========================
# GitHub exports
# =========================
/.github export-ignore
CHANGELOG.md export-ignore
.styleci.yml export-ignore

# =========================
# Diff settings (optional)
# =========================
*.blade.php diff=html
*.css diff=css
*.html diff=html
*.md diff=markdown
*.php diff=php
